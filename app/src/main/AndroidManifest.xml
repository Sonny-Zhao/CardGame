<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tianyu.cardgame">

    <application
        android:name=".application.CardGameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tianyu.cardgame.activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>

        <activity
            android:name="com.tianyu.cardgame.activity.AboutActivity"
            android:theme="@android:style/Theme.Dialog"></activity>

        <activity
            android:name="com.tianyu.cardgame.activity.GuideActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>

        <activity
            android:name="com.tianyu.cardgame.activity.StartUpActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.tianyu.cardgame.service.SoundService" />
        <service android:name="com.tianyu.cardgame.service.EffectService" />
    </application>
</manifest>